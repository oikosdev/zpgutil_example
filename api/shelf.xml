
    <class name = "shelf" >
        Represents a Shelf (containing a set of Books) 
        
        <include filename = "../license.xml" />
        
        <!-- Note: If no <constructor> is declared, an implicit one is created. -->
        <constructor>
            Create a new Book with the given title and author.
            <argument name = "name" type = "string" />
            <argument name = "session" type = "zpgutil_session*" />
        </constructor>
        
        <!-- Note: If no <destructor> is declared, an implicit one is created.
            </destructor> -->
        <method name = "count_books">
            <return type = "int" />
        </method>
        
